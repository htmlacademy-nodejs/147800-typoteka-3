extends ../main-search-layout.pug

block content    
  main
    section.search-page
      .search-page__wrapper(class=articles.length > 0 ? '' : 'search-page__wrapper--empty')
        h1 Поиск
        .search.search-page__form
          form(action='/search', method='get')
            label
              input(type='text', name='search', placeholder='Что ищем?')
            button.search__button.button.button--transparent(type='submit') Найти
          if articles.length > 0
            each article in articles
              .search__result
                time.search__date(datetime=`${article.createdAt}`) #{dayjs(article.createdAt).format(`DD.MM.YYYY, hh:mm`)}
                a.search__link(href='#') #{article.announce}
        if articles.length === 0
          p.search-page__empty Ничего не нашлось

